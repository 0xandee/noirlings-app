{
    "name": "@signorecello/noir_playground",
    "version": "0.2.3",
    "type": "module",
    "main": "src/index.ts",
    "exports": {
        "require": "./dist/cjs/index.js",
        "import": "./dist/esm/index.js",
        "default": "./dist/esm/index.js"
    },
    "files": [
        "dist",
        "package.json"
    ],
    "types": "./dist/esm/index.d.ts",
    "scripts": {
        "build": "yarn build:cjs",
        "build:cjs": "rollup -c rollup.config.js",
        "dev": "rollup -c rollup.config.esm.js -w",
        "lint": "eslint --ext .ts,.tsx src",
        "format": "prettier --write \"src/**/*.{ts,tsx}\"",
        "test": "echo \"Error: no test specified\" && exit 1",
        "publish": "yarn build && yarn npm publish --access public"
    },
    "dependencies": {
        "@fontsource-variable/nunito": "^5.0.16",
        "@monaco-editor/react": "4.6.0",
        "@noir-lang/backend_barretenberg": "^0.19.2",
        "@noir-lang/noir_js": "^0.19.2",
        "@noir-lang/noir_wasm": "^0.19.2",
        "@noir-lang/source-resolver": "^0.19.2",
        "@noir-lang/types": "^0.19.2",
        "fflate": "^0.8.1",
        "js-base64": "^3.7.5",
        "monaco-editor": "^0.44.0",
        "monaco-editor-textmate": "^4.0.0",
        "monaco-textmate": "^3.0.1",
        "onigasm": "^2.2.5",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-toastify": "^9.1.3",
        "styled-components": "^6.1.1"
    },
    "devDependencies": {
        "@rollup/plugin-json": "^6.0.1",
        "@rollup/plugin-typescript": "^11.1.5",
        "@rollup/plugin-wasm": "^6.2.2",
        "@types/react": "18.2.38",
        "@typescript-eslint/eslint-plugin": "^6.12.0",
        "@typescript-eslint/parser": "^6.12.0",
        "eslint": "^8.54.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.4",
        "prettier": "3.1.0",
        "rollup-plugin-copy": "^3.5.0",
        "rollup-plugin-terser": "^7.0.2",
        "typescript": "^5.3.2"
    },
    "packageManager": "yarn@4.0.2"
}
