{
  "compilerOptions": {
    "useDefineForClassFields": true,
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "jsx": "react",
    "isolatedModules": false,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "baseUrl": ".",
    "declaration": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "es2020",
    "module": "esnext",
    "lib": ["es2021", "DOM"],
    "outDir": "dist",
    "rootDir": "./",
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "types": ["vite/client"]
  },
  "include": ["src", "**/*.css"]
}
